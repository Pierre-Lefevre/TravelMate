{% extends "TMPlatformBundle::layout.html.twig" %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('bundles/tmplatform/css/form-search.css') }}">
	<link rel="stylesheet" href="{{ asset('bundles/tmplatform/css/list.css') }}">
	<link rel="stylesheet" href="{{ asset('bundles/tmuser/css/profile-picture.css') }}">
	<link rel="stylesheet" href="{{ asset('bundles/tmplatform/css/flags.css') }}">
{% endblock %}

{% block title %}
	Rechercher un voyage
{% endblock %}

{% block tmplatform_body %}
	{{ wo_render_breadcrumbs() }}
	{{ include("TMPlatformBundle:Travel:form_search_travel.html.twig") }}
	<p class="nb-results">{{ nbResults }} voyages correspondent Ã  votre recherche.</p>
	{{ include("TMPlatformBundle:Travel:list_travel.html.twig") }}
	{% if nbPages > 1 %}
		<ul class="paging">
			{% for p in range(1, nbPages) %}
				<li{% if p == page %} class="active"{% endif %}>
					<a href="{{ path('tm_platform_search', {'page': p}) }}">{{ p }}</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
{% endblock %}
