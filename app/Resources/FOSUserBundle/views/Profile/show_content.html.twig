{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show profile profile-show">
	<div class="profile-picture" style="background-image: url({{ asset('uploads/user/profilepics/' ~ user.getProfilePicturePath) }})"></div>
	<div>
		<h2>{{ user.firstname }} {{ user.lastname }}</h2>
		<p>Ã‚ge : {{ user.age }} ans</p>
		<p>Email : {{ user.email }}</p>
		{% if (app.user.id is defined and app.user.id == user.id) or is_granted("ROLE_ADMIN") %}
			<a href="{{ path('tm_user_profile_edit', {'id' : user.id}) }}" class="button neutral">Modifier</a>
		{% endif %}

		{% if app.user.id is defined and app.user.id != user.id %}
			<a href="{{ path('tm_chat_user', {'id' : user.id}) }}" class="button primary">Contacter</a>
		{% endif %}
	</div>
</div>
